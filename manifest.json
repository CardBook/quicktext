{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "{8845E3B3-E8FB-40E2-95E9-EC40294818C4}",
      "strict_min_version": "68.0",
      "strict_max_version": "68.*"
    }
  },
  "name": "Quicktext",
  "version": "2.15",
  "author": "John Bieling",
  "homepage_url": "https://github.com/jobisoft/quicktext",
  "default_locale": "en-US",
  "description": "__MSG_extensionDescription__",  
  "icons": {
    "32": "content/skin/icon.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["content/scripts/preferences.js", "background.js"]
  },
  "experiment_apis": {
    "LegacyPrefs": {
      "schema": "content/api/LegacyPrefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyPrefs"]],
        "script": "content/api/LegacyPrefs/implementation.js"
      }
    },
    "ConversionHelper": {
      "schema": "content/api/ConversionHelper/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["ConversionHelper"]],
        "script": "content/api/ConversionHelper/implementation.js"
      }
    }    
  },  
  "legacy": {
    "type": "xul",
    "options": {
      "page": "chrome://quicktext/content/addonoptions.xul",
      "open_in_tab": false
    }
  }
}
